// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
  // url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Contact {
  id               String @unique
  accountPublicKey String
  name             String
}

model Draft {
  id         String   @unique
  text       String
  lastUpdate DateTime @updatedAt
}

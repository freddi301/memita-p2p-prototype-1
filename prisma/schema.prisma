// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
  // url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Contact {
  accountPublicKey String @unique
  name             String
}

model Message {
  sender    String
  recipient String
  text      String
  createdAt DateTime

  @@unique([sender, recipient, text, createdAt])
}

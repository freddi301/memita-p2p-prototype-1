// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Contact {
  accountPublicKey String @unique
  name             String
}

model Message {
  hash               String
  sender             String
  recipient          String
  text               String
  createdAt          DateTime
  // references
  MessageReplication MessageReplication[]

  @@unique([hash])
}

model MessageReplication {
  hash        String
  device      String
  deliveredAt DateTime
  // references
  Message     Message  @relation(fields: [hash], references: [hash])

  @@unique([hash, device])
}
